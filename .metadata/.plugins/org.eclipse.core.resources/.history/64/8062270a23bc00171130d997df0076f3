package core.product.model;

import java.util.*;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class OrderService {

    @RequestMapping("/order/{orderId}")
    public Order getOrder(@PathVariable long orderId) {
    	List<Item> itemList = new ArrayList<Item>();
    	Item it1 = new Item(1, "Magnificent book");
    	Item it2 = new Item(2, "Awesome album");
    	itemList.add(it1);
    	itemList.add(it2);
        return new Order(new Random().nextLong(),itemList, new Customer("Accenture","Brussels"), "Waterloolaan 16", "Waterloolaan 16");
    }
}
